<!DOCTYPE html>
<html>
<head>
    <title>Impostor Dashboard</title>
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #0e0e0e;
            color: #fff;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 40px;
        }

        h1 {
            color: #00ffaa;
            margin-bottom: 20px;
        }

        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
            gap: 20px;
            width: 100%;
            max-width: 1000px;
        }

        .card {
            background-color: #1c1c1c;
            border-radius: 15px;
            padding: 20px;
            text-align: center;
            box-shadow: 0 0 10px #00ffaa44;
            transition: 0.2s;
        }

        .card.alive {
            border-left: 6px solid #00ff88;
        }

        .card.dead {
            border-left: 6px solid #ff4444;
            opacity: 0.6;
        }

        .status {
            font-weight: bold;
            margin-top: 10px;
        }

        .alive .status {
            color: #00ff88;
        }

        .dead .status {
            color: #ff4444;
        }
    </style>
</head>
<body>
    <h1>Impostor Dashboard</h1>

    <div class="grid">
        <% player.forEach(playe => { %>
            <div class="card <%= playe.alive ? 'alive' : 'dead' %>">
                <h2><%= playe.name %></h2>
                <div class="status">
                    <%= playe.alive ? '✅ Alive' : '☠️ Killed' %>
                </div>
            </div>
        <% }) %>
    </div>
</body>
</html>
